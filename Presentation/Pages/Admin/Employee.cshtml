@page
@model Presentation.Pages.Admin.EmployeeModel
@{
  Layout = "_LayoutAdmin";
	ViewData["Title"] = "Admin Page";
}
<div class="main-panel">
  <div class="content-wrapper">
     <!-- row search -->
    <div class="row">
    </div>
    <!-- row button insert -->
    <div class="row">
      <div class="col-lg-12 stretch-card">
        <a href="#CreateEmployeeForm" data-toggle="modal" id="btCreateEmployee" type="button" class="btn  btn-primary btn-lg btn-inverse-*">
          <i class="mdi mdi-upload"></i>Create Employee
        </a>
      </div>
    </div>
    <!-- row table -->
    <div class="row">
    <div class="col-lg-12 stretch-card">
      <div class="card">
        <div class="card-body">
          <h3 align="center">List of Employees </h3>
          <table class="table table-bordered table-striped table-hover">
           <thead>
            <tr>
              <th>ID</th>
              <th>Full name</th>
              <th>Job</th>
              <th>Salary</th>
              <th>Status</th>
              <th></th>
            </tr>
           </thead>
           <tbody>
             <!-- change to code later -->
             @foreach (var item in Model.ListEmployees){
              <tr>
                <td>@item.Id</td>
                <td> @item.LastName
                  @item.FirstName</td>
                <td>@item.JobId</td>
                <td>@item.Salary</td>
                <td><label class="badge badge-warning">item.Status</label></td>
                <td> 
                  <button  id="@item.Id" data-toggle="modal" data-target="#EditEmployeeForm"  type="button" class="btn btn-dark btn-sm  btn-rounded EditEmployee"><i class="fa fa-cog"></i></button>
                  <button  id="@item.Id" type="button" class="btn btn-danger btn-sm  btn-rounded DeleteEmployee"><i class="fa fa-times" ></i></button>
                </td>
              </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
    </div>
  </div> 
  <!-- end content_warper -->

  <!-- Table job -->
  <div class="content-wrapper">
    <div class="row">
    <div class="col-lg-6 stretch-card">
      <div class="card">
        <div class="card-body">
          <h3 align="center">List of Jobs </h3>
          <table class="table table-bordered table-striped table-hover">
           <thead>
            <tr>
              <th>Job ID</th>
              <th>Job name</th>
            </tr>
           </thead>
           <tbody>
             <!-- change to code later -->
             @foreach (var item in Model.ListJobs){
              <tr>
                <td>@item.JobId</td>
                <td>@item.JobName</td>
              </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
    </div>
  </div>

</div>
<!-- end main body -->

<!--formcreate  -->
<div class="modal fade" id="CreateEmployeeForm" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" >
            <div class="modal-header" style=" background-color:aliceblue;">
                <h4 class="modal-title" style="margin: 10px 0 10px 510px; color:#000; font-weight: bold;font-size:34">New Employee</h4>
            </div>
		    <div class="model-body" style="margin: 15px">
				  <form class="form-sample" action="post">
            <div class="row">
              <div class="col-6">
                <p style="font-weight:600" class="card-description"> Personal info </p>
              </div>
              <div class="col-6">
                <p style="font-weight:600" class="card-description">Personal account </p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">First Name</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" required/>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Username</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" required/>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Last Name</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" required/>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Password</label>
                  <div class="col-sm-9">
                    <input type="password" class="form-control" required/>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Date of Birth</label>
                  <div class="col-sm-9">
                    <input type="date" class="form-control" placeholder="dd/mm/yyyy" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Enter Password</label>
                  <div class="col-sm-9">
                    <input type="password" class="form-control" required/>
                  </div>
                </div>
              </div>   
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Phone</label>
                  <div class="col-sm-9">
                    <input type="tel" class="form-control" pattern="0[0-9]{9,10}" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Status</label>
                  <div class="col-sm-9">
                    <select class="form-control">
                      <option>Active</option>
                      <option>Disable</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Address</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" />
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Job</label>
                  <div class="col-sm-9">
                    <select class="form-control">
                      @foreach (var item in Model.ListJobs){
                        <option>@item.JobId - 
                          @item.JobName</option>
                      }
                    </select>
                  </div>
                </div>
              </div>            
            </div>
            <div class="row">
              <div class="col-md-6">
              </div>                 
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Salary</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" />
                  </div>
                </div>
              </div>  
            </div>
            <div class="row" style=" display: flex; justify-content: flex-end;">
              <button type="submit" class="btn btn-success mr-2"><b>Create</b></button>
              <button class="btn btn-light" data-dismiss="modal"><b>Cancel</b></button>
            </div>
          </form>
		    </div>
      </div>    
    </div>
</div>

