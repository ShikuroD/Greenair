            <div class="col-md-5">
                <div class="form-group">
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <p class=" alg-r">Email</p>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 ">
                <p class="alg-r">Address</p>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <input type="area" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="payment-headding">
                    <h3>Customer Information</h3>
                </div>
            </div>
        </div>
